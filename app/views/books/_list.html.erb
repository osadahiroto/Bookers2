

<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <% if book.errors.any? %>
  <% book.errors.full_messages.each do |message| %>
    <%= message %>error
  <% end %>
<% end %>
  <div class="row">
    <div class="col-md-3">
<h2>User info</h2>
<table class="table">
  <tbody>
    <tr>
      <%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", format: 'jpeg', size: "100x100" %>
    </tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
      <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
    </tbody>
    </table>
    <div class="row">
      <% if user.id == current_user.id %>
       <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block text-brack" do %>
       <i class="fas fa-user-cog"></i>
       <% end %>
       <% else %>
       <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block text-brack" do %>
       <i class="fas fa-user-cog"></i>
       <% end %>
      <% end %>
    </div>



<h2>New book</h2>
<%= form_with model: book, local:true do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Opnion</p>
<%= f.text_area :body %>
<div>
  <%= f.submit 'Create Book' %>
</div>
<% end %>
</div>